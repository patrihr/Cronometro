<Window x:Class="Cronometro.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cronometro"
        mc:Ignorable="d"
        Title="Cronómetro" 
        Height="350" Width="400">
    <Grid>
        <Label x:Name="TimeLabel" Content="00:00:00" FontSize="40"  HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center"/>
        <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,170,0,57">
            <Button x:Name="btnStart" Content="Start" FontSize="15" HorizontalAlignment="Center" Margin="0,0,0,0" VerticalAlignment="Center" Width="90" Height="40" Click="btnStart_Click"/>
            <Button x:Name="btnPause" Content="Pause" FontSize="15" HorizontalAlignment="Center" Margin="30,2,0,0" VerticalAlignment="Center" Width="90" Height="40" Click="btnPause_Click"/>
            <Button x:Name="btnStopReset" Content="Stop" FontSize="15" HorizontalAlignment="Center" Margin="30,2,0,0" VerticalAlignment="Center" Width="90" Height="40" Click="btnStopReset_Click"/>
        </StackPanel>
    </Grid>
</Window>
